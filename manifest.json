{
  "manifest_version": 3,
  "name": "YT Cryptic Chat",
  "version": "1.1",
  "description": "A cryptic chatbot assistant for YouTube videos.",
  "permissions": ["sidePanel", "activeTab", "tabs", "scripting", "storage"],
  "host_permissions": [
    "<all_urls>",
    "https://www.youtube.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Open YT Chat"
  },
  "content_scripts": [
    {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    },
    {
        "matches": ["<all_urls>"],
        "js": ["content-scraper.js"],
        "run_at": "document_idle",
        "exclude_matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
